<UserControl x:Class="Tabel.Component.TabelPanel.TabelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tabel.Component.TabelPanel"
             mc:Ignorable="d" 
             SnapsToDevicePixels="True"
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Grid DockPanel.Dock="Right">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.Resources>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="IsReadOnly" Value="True"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </Grid.Resources>

            <TextBox Text="дни" Grid.Row="0"/>
            <TextBox Text="часы" Grid.Row="1"/>
            <TextBox Text="дни" Grid.Row="2"/>
            <TextBox Text="часы" Grid.Row="3"/>

            <TextBox Text="{Binding DaysWeek1}" Grid.Row="0" Grid.Column="1"/>
            <TextBox Text="100" Grid.Row="1" Grid.Column="1"/>
            <TextBox Text="10" Grid.Row="2" Grid.Column="1"/>
            <TextBox Text="100" Grid.Row="3" Grid.Column="1"/>

            <TextBox Text="дни" Grid.Row="0"  Grid.Column="2" Grid.RowSpan="2"/>
            <TextBox Text="часы" Grid.Row="2"  Grid.Column="2" Grid.RowSpan="2"/>

            <TextBox Text="20" Grid.Row="0" Grid.Column="3" Grid.RowSpan="2"/>
            <TextBox Text="196" Grid.Row="2" Grid.Column="3" Grid.RowSpan="2"/>

            <TextBox Text="Я" Grid.Row="0" Grid.Column="4"/>
            <TextBox Text="Я1,5+" Grid.Row="1" Grid.Column="4" />
            <TextBox Text="Я2+" Grid.Row="2" Grid.Column="4"/>

            <TextBox Text="188" Grid.Row="0" Grid.Column="5"/>
            <TextBox Text="10" Grid.Row="1" Grid.Column="5" />
            <TextBox Text="14" Grid.Row="2" Grid.Column="5"/>


            <!--<TextBox Text="10" Grid.Row="2" Grid.Column="1"/>
            <TextBox Text="100" Grid.Row="3" Grid.Column="1"/>-->

        </Grid>
        <ListBox Padding="2" SelectionMode="Extended" ItemsSource="{Binding Path=SourceCollection , RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
                 >
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <local:TabelPanel/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                <Border x:Name="border" BorderThickness="2" Padding="1" CornerRadius="2" Margin="2,0">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="4" Opacity="0.4" ShadowDepth="3"/>
                                    </Border.Effect>
                                    <StackPanel>
                                        <TextBlock Text="{Binding td_Day}" TextAlignment="Center" Background="LightSteelBlue" Foreground="Black" FontWeight="Bold" SnapsToDevicePixels="True"/>

                                        <StackPanel Orientation="Horizontal">
                                            <ComboBox Width="28" HorizontalContentAlignment="Center" 
                                                      DisplayMemberPath="t_name"
                                                      SelectedItem="{Binding td_Kind, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                      ItemsSource="{Binding Path=ItemsKind, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}">
                                                <!--<ComboBoxItem Content="Я"/>
                                                <ComboBoxItem Content="О"/>
                                                <ComboBoxItem Content="В"/>
                                                <ComboBoxItem Content="РВ"/>-->
                                            </ComboBox>
                                            <TextBox Text="{Binding td_Hours}" Padding="2,0" MinWidth="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                                            <TextBox Text="{Binding td_Hours2}" Visibility="{Binding VisibilityHours}" Padding="2,0" MinWidth="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="Background" Value="Blue"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderBrush" Value="Blue" TargetName="border"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            
            
            <!--<ListBoxItem Content="000"/>
            <ListBoxItem Content="111"/>
            <ListBoxItem Content="222"/>
            <ListBoxItem Content="333"/>
            <ListBoxItem Content="444"/>
            <ListBoxItem Content="000"/>
            <ListBoxItem Content="000"/>
            <ListBoxItem Content="000"/>
            <ListBoxItem Content="000"/>
            <ListBoxItem Content="000"/>
            <ListBoxItem Content="000"/>
            <ListBoxItem Content="000"/>
            <ListBoxItem Content="000"/>-->
        </ListBox>
    </DockPanel>
</UserControl>
