<Window x:Class="Tabel.Views.EditTablesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Tabel.ViewModels"
        xmlns:local="clr-namespace:Tabel.Views"
        mc:Ignorable="d"
        Title="Редактирование" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:EditTablesWindowModel/>
    </Window.DataContext>
    <Grid>
        <TabControl Margin="10">
            <TabItem Header="Отделы и группы">
                <UniformGrid Columns="2" Background="#FFE5E5E5">

                    <DockPanel Margin="4,4,4,4">

                        <UniformGrid Columns="2" DockPanel.Dock="Bottom">
                            <Button Content="Добавить" Margin="2" Command="{Binding AddCommand}"/>
                            <Button Content="Удалить" Margin="2" Command="{Binding DeleteCommand}"/>
                        </UniformGrid>
                        <TreeView ItemsSource="{Binding ListOtdel}">
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding otdels1}">
                                    <TextBlock Text="{Binding ot_name}"/>
                                    <HierarchicalDataTemplate.ItemTemplate >
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ot_name}"></TextBlock>
                                        </DataTemplate>
                                    </HierarchicalDataTemplate.ItemTemplate>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>

                    </DockPanel>

                    <ListBox Margin="4"/>

                </UniformGrid>
            </TabItem>
            <TabItem Header="Пользователи">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Разряды">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
