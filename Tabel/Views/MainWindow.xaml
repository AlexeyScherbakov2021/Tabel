<Window x:Class="Tabel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Tabel.ViewModels"
        xmlns:local="clr-namespace:Tabel"
        mc:Ignorable="d"
        Title="Табель учета рабочего времени" Height="700" Width="1200" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom" Height="28">
            <StatusBarItem Content="Пользователь: " />
            <StatusBarItem Content="{Binding CurrentUser.u_fio}"/>
        </StatusBar>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#FFE2E6F5" Height="36">
            <TextBlock Text="Месяц " VerticalAlignment="Center" Margin="20,0,0,0"/>
            <ComboBox Width="124" VerticalAlignment="Center" SelectedValue="{Binding CurrentTabel.t_month}"
                      ItemsSource="{Binding ListMonth}" SelectedValuePath="Number">
            </ComboBox>
            <TextBlock Text="Номер " VerticalAlignment="Center" Margin="21,0,0,0"/>
            <TextBox Text="{Binding CurrentTabel.t_number}" Width="98" VerticalAlignment="Center"/>
            <TextBlock Text="Дата составления " VerticalAlignment="Center" Margin="26,0,0,0"/>
            <DatePicker VerticalAlignment="Center" FirstDayOfWeek="Monday" Width="136" SelectedDate="{Binding CurrentTabel.t_date_create}"/>
        </StackPanel>
        <DataGrid DockPanel.Dock="Left" ItemsSource="{Binding PersonalList}" Style="{DynamicResource DataGridStyle}"
                  SelectedItem="{Binding SelectedPerson}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Таб.№" Binding="{Binding p_tab_number}" Width="60"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding p_lastname}" Width="90"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding p_name}" Width="80"/>
                <DataGridTextColumn Header="Отчество" Binding="{Binding p_midname}" Width="90"/>
                <DataGridTextColumn Header="Должность" Binding="{Binding p_profession}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid >
            <ItemsControl x:Name="icDays" ItemsSource="{Binding ListTabelPerson}" HorizontalAlignment="Stretch" Margin="16,16,16,0" VerticalAlignment="Top">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="11"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
            <Border BorderBrush="Black" BorderThickness="1,1,1,1" Width="50" CornerRadius="3" Margin="0,0,0,8">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="1" Color="#FFD0D0D0"/>
                </Border.Effect>
                <StackPanel Orientation="Vertical" ClipToBounds="True">
                    <TextBlock Text="{Binding d_day}" VerticalAlignment="Center" TextAlignment="Center" 
                               Background="#FF0800FF" Foreground="White" ClipToBounds="True" FontSize="14" Height="28"/>
                                <ComboBox ItemsSource="{Binding DataContext.ListTypeDay, ElementName=icDays}"
                                          DisplayMemberPath="t_name"/>
                                <!--<Button Content="{Binding d_type}" Height="24" FontWeight="Bold" FontSize="14" Focusable="False"
                                        CommandParameter="{Binding d_day}"
                                        Command="{Binding DataContext.SelectTypeCommand, ElementName=icDays}" IsTabStop="False"/>-->
                                <!--<TextBlock Text="{Binding d_type}" FontWeight="Bold"
                               VerticalAlignment="Center" TextAlignment="Center" FontSize="14" Background="White"/>-->
                    <TextBox Text="{Binding d_hours}" HorizontalContentAlignment="Center" FontSize="14"/>
                </StackPanel>
            </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <!--<Border BorderBrush="Black" BorderThickness="1,1,1,1" Width="34" Height="60" CornerRadius="3">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="1" Color="#FFD0D0D0"/>
                </Border.Effect>
                <StackPanel Orientation="Vertical" Margin="0" ClipToBounds="True">
                    <TextBlock Text="5" VerticalAlignment="Center" TextAlignment="Center" Background="#FF0800FF" Foreground="White" ClipToBounds="True" FontSize="14"/>
                    <TextBlock Text="Я" FontWeight="Bold" VerticalAlignment="Center" TextAlignment="Center" FontSize="14" Background="White"/>
                    <TextBox Text="11" HorizontalContentAlignment="Center" FontSize="14"/>
                </StackPanel>
            </Border>-->
            <Popup IsOpen="{Binding IsOpenPopup}" Placement="MousePoint" Width="240" Height="200" UseLayoutRounding="True" ScrollViewer.CanContentScroll="True" VerticalOffset="8" HorizontalOffset="-200">
            </Popup>
            <ListBox VerticalAlignment="Bottom" ItemsSource="{Binding ListTypeDay}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding t_name}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding t_desc}" Grid.Column="1"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </DockPanel>
    
</Window>
