<Window x:Class="Tabel.Views.SelectOtpuskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:cmd="clr-namespace:Tabel.Commands"
        xmlns:local="clr-namespace:Tabel.Views"
        mc:Ignorable="d"
        Title="Выбор дней" Height="262" Width="230" Topmost="True" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <DockPanel>
        <UniformGrid Columns="2" DockPanel.Dock="Bottom" Margin="5">
            <Button Content="OK" Margin="5,0" 
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=local:SelectOtpuskWindow}}" >
                <Button.Command>
                    <cmd:CloseDialogCommand DialogResult="True"/>
                </Button.Command>
            </Button>
            <Button Content="Отменить" Margin="5,0" IsCancel="True"/>
        </UniformGrid>
        <Calendar x:Name="cal"  Margin="10" SelectionMode="SingleRange">
            <Calendar.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
            </Calendar.Effect>
        </Calendar>
    </DockPanel>
</Window>
