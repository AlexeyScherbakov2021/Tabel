<UserControl x:Class="Tabel.Views.OtpuskUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:otp="clr-namespace:Tabel.Component.OtpuskPanel"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:Tabel.Views"
             xmlns:vm="clr-namespace:Tabel.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:OtpuskUCViewModel/>
    </UserControl.DataContext>
    <Grid>
        <otp:OtpuskPanel Margin="20,200" ItemsSource="{Binding ListDays}" EditOtpusk="OtpuskPanel_EditOtpuk">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="EditOtpusk">
                    <i:InvokeCommandAction Command="{Binding EditOtpuskCommand}" PassEventArgsToCommand="True"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </otp:OtpuskPanel>
    </Grid>
    
</UserControl>
