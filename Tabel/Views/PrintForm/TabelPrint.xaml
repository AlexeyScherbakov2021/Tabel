<Window x:Class="Tabel.Views.PrintForm.TabelPrint"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tabel.Views.PrintForm"
        xmlns:vm="clr-namespace:Tabel.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance {x:Type vm:TabelUCViewModel}}"
        Title="TabelPrint" Height="800" Width="1200" WindowStartupLocation="CenterScreen">
    <Grid>
        <FlowDocumentReader >
            <FlowDocument>
                <Paragraph>
                    <Run Text="Отдел"/>
                    <Run Text="{Binding SelectedOtdel.ot_name}"/>
                    <LineBreak/>
                    <Run Text="Номер"/>
                    <Run Text="{Binding Tabel.t_number}"/>
                    <Run Text="Дата составления"/>
                    <Run Text="{Binding Tabel.t_date_create, StringFormat=dd.MM.yyyy}" />

                </Paragraph>
                <Paragraph>
                    <Run>
                       
                    </Run>
                    <ItemsControl ItemsSource="{Binding ListTabelPerson}" DisplayMemberPath="person.FIO">
                    </ItemsControl>
                </Paragraph>
            </FlowDocument>
        </FlowDocumentReader>

    </Grid>
</Window>
